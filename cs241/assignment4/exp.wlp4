//
// WLP4 program with two integer parameters, a and b
//   returns the sum of a and b
//
int wain(int a, int b) {
    int ans = 0;
    int exp = 0;
    ans = 1;
    exp = b;
    while (exp > 0) {
        if (exp % 2 == 0) {

        } else {
            ans = ans * a;
            exp = exp - 1;
        }
        a = a * a;
        exp = exp / 2;
    }
    return ans;
}
